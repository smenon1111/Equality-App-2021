<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <ImageView
        android:id="@+id/character1"
        android:layout_width="99dp"
        android:layout_height="88dp"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toTopOf="@id/character2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/locked_profile" />

    <ImageView
        android:id="@+id/character2"
        android:layout_width="99dp"
        android:layout_height="88dp"
        app:layout_constraintBottom_toTopOf="@id/character3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/character1"
        app:srcCompat="@drawable/locked_profile" />

    <ImageView
        android:id="@+id/character3"
        android:layout_width="99dp"
        android:layout_height="88dp"
        app:layout_constraintBottom_toTopOf="@id/character4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/character2"
        app:srcCompat="@drawable/locked_profile" />

    <ImageView
        android:id="@+id/character4"
        android:layout_width="99dp"
        android:layout_height="88dp"
        app:layout_constraintBottom_toTopOf="@id/character5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/character3"
         app:srcCompat="@drawable/locked_profile" />

    <ImageView
        android:id="@+id/character5"
        android:layout_width="99dp"
        android:layout_height="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/character4"
         app:srcCompat="@drawable/locked_profile"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/shopTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shopTitle"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />

    <TextView
        android:id="@+id/character1Coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/character1Cost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/character1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/character2Coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="225dp"
        android:text="@string/character2Cost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/character2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/character3Coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="355dp"
        android:text="@string/character3Cost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/character3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/character4Coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="485dp"
        android:text="@string/character4Cost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/character4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/character5Coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/character5Cost"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/character5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.845"/>

    <Button
        android:id="@+id/character1PurchaseButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="130dp"
        android:text="@string/PurchaseButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/character1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/character2PurchaseButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="255dp"
        android:text="@string/PurchaseButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/character2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/character3PurchaseButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="385dp"
        android:text="@string/PurchaseButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/character3"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/character4PurchaseButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="515dp"
        android:text="@string/PurchaseButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/character4"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/character5PurchaseButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:text="@string/PurchaseButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toEndOf="@id/character5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.941" />
</androidx.constraintlayout.widget.ConstraintLayout>