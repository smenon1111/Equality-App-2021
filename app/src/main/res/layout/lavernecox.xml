<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFFCC8">

    <TextView
        android:id="@+id/LaverneTitle"
        android:layout_width="214dp"
        android:layout_height="36dp"
        android:text="@string/LaverneTitle"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/LaverneBio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <TextView
        android:id="@+id/LaverneBio"
        android:layout_width="352dp"
        android:layout_height="50dp"
        android:text="@string/LaverneBio"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@id/LaverneInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.271"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LaverneTitle"
        app:layout_constraintVertical_bias="0.037" />

    <TextView
        android:id="@+id/LaverneInfo"
        android:layout_width="376dp"
        android:layout_height="478dp"
        android:text="@string/LaverneInfo1"
        android:textSize="15.5sp"
        app:layout_constraintBottom_toTopOf="@id/NextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LaverneBio"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/LaverneReferences"
        android:layout_width="365dp"
        android:layout_height="93dp"
        android:text="@string/LaverneReferences"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NextButton"
        app:layout_constraintVertical_bias="0.037" />

    <Button
        android:id="@+id/NextButton"
        android:layout_width="213dp"
        android:layout_height="39dp"
        android:background="#CCFF90"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:text="@string/NextButton"
        app:layout_constraintBottom_toTopOf="@id/LaverneReferences"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LaverneInfo" />
</androidx.constraintlayout.widget.ConstraintLayout>