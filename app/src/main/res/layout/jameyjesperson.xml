<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/JameyTitle"
        android:layout_width="214dp"
        android:layout_height="36dp"
        android:text="@string/JameyTitle"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/JameyBio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <TextView
        android:id="@+id/JameyBio"
        android:layout_width="352dp"
        android:layout_height="50dp"
        android:text="@string/JameyBio"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@id/JameyInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/JameyTitle"
        app:layout_constraintVertical_bias="0.037" />

    <TextView
        android:id="@+id/JameyInfo"
        android:layout_width="361dp"
        android:layout_height="500dp"
        android:text="@string/JameyInfo1"
        android:textSize="15.5sp"
        app:layout_constraintBottom_toTopOf="@id/NextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/JameyBio"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/JameyReferences"
        android:layout_width="401dp"
        android:layout_height="100dp"
        android:text="@string/JameyReferences"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NextButton"
        app:layout_constraintVertical_bias="0.037" />

    <Button
        android:id="@+id/NextButton"
        android:layout_width="213dp"
        android:layout_height="39dp"
        android:text="@string/NextButton"
        app:layout_constraintBottom_toTopOf="@id/JameyReferences"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/JameyInfo" />
</androidx.constraintlayout.widget.ConstraintLayout>